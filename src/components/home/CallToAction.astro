---
const cta = {
  title: "Gotowy na nową stronę?",
  description:
    "Napisz, opowiedz o projekcie i zobacz, jak mozemy wspolnie go rozwinac.",
  button: { label: "Skontaktuj sie", href: "/kontakt/" },
};
---

<section class="mb-20 md:md-24">
  <div class="rounded-2xl border border-[var(--border)] bg-[var(--surface)] px-5 py-14 md:px-8 md:py-14">
    <div class="flex flex-wrap gap-6 lg:flex-row lg:items-center lg:justify-between">
      <div class="space-y-3">
        <h2 class="text-3xl font-semibold tracking-tight sm:text-4xl">{cta.title}</h2>
        <p class="max-w-2xl text-base text-[var(--muted)]">{cta.description}</p>
      </div>
      <a class="block rounded-full h-auto bg-[var(--accent)] px-6 py-3 text-base font-semibold text-white transition hover:brightness-95" href={cta.button.href} title={cta.button.label}>
          {cta.button.label}
      </a>
    </div>
  </div>
</section>
