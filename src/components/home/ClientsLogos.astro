---
import { Image } from "astro:assets";

const logoEntries = import.meta.glob("/src/content/klienci/img/*", { eager: true });
const logos = Object.entries(logoEntries)
  .map(([path, entry]) => {
    const src = entry?.default ?? null;
    if (!src) return null;
    const label = path.split("/").pop().replace(/\.[^.]+$/, "");
    return { src, label };
  })
  .filter(Boolean)
  .sort((a, b) => a.label.localeCompare(b.label, "pl-PL"));
---

<section class="relative overflow-hidden bg-white pb-24 pt-20">
  <div class="relative flex flex-col gap-6 sm:flex-row sm:items-center sm:justify-between">
    <div class="space-y-3">
      <p class="text-base/7 font-semibold text-[var(--accent)]">Opinie</p>
      <h2 class="text-3xl font-semibold tracking-tight text-black sm:text-4xl">Zaufali mi</h2>
    </div>
    <a class="inline-flex w-fit rounded-full bg-[var(--accent)] px-6 py-3 text-base font-semibold text-white transition hover:brightness-95 sm:inline-flex" href="/realizacje/" title="Wszystkie realizacje">
      Zobacz opinie
    </a>
  </div>
  <div class="mt-10 grid gap-4 text-center sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6">
    {logos.map((logo) => (
      <div class="flex items-center justify-center border border-gray-300 rounded-md px-6 py-4">
        <Image
          class="max-h-16 w-auto object-contain grayscale opacity-90 transition hover:opacity-100"
          src={logo.src}
          alt={logo.label}
          loading="lazy"
          width={200}
          height={64}
        />
      </div>
    ))}
  </div>
</section>
